<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="co.herod.contacts.ContactActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:src="@drawable/person_image_empty"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/contactNameEditText"
        android:layout_below="@+id/imageView"
        android:editable="true"
        android:hint="Name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/contactEmailEditText"
        android:layout_below="@+id/contactNameEditText"
        android:layout_alignLeft="@+id/contactNameEditText"
        android:layout_alignStart="@+id/contactNameEditText"
        android:editable="true"
        android:hint="Email"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/contactTelEditText"
        android:layout_below="@+id/contactEmailEditText"
        android:layout_alignLeft="@+id/contactEmailEditText"
        android:layout_alignStart="@+id/contactEmailEditText"
        android:editable="true"
        android:hint="Tel"
        android:layout_alignRight="@+id/contactEmailEditText"
        android:layout_alignEnd="@+id/contactEmailEditText" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:layout_below="@+id/contactNameEditText"
        android:layout_toLeftOf="@+id/imageView"
        android:src="@drawable/person_image_empty"
        android:layout_alignBottom="@+id/contactEmailEditText"
        android:scaleType="fitEnd" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:layout_alignTop="@+id/contactTelEditText"
        android:layout_toLeftOf="@+id/imageView"
        android:src="@drawable/person_image_empty"
        android:layout_alignBottom="@+id/contactTelEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitEnd" />
</RelativeLayout>
